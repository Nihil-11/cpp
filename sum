
#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter the number: ";
    cin >> n;
    
    int summ = ((1 + n) * n) / 2; // Формула суммы арифметической прогрессии с шагом "1" 
    cout << "Sum from 1 to ";
    cout << n;
    cout << ": ";
    cout << summ;
    
    return 0;
}
