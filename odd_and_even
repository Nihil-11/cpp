
#include <iostream>
using namespace std;

int choice, n, even, odd;
bool run = true;

void get() {
    cout << "Введите количество элементов: ";
    cin >> n;
}

void print() {
    cout << "Четных чисел: " << even << endl; 
    cout << "Нечетных чисел: " << odd << endl;
}

void count(int* arr) {
    even = 0, odd = 0;
    for (int i = 0; i < n; i++) {
        if (arr[i] % 2 == 0) {
            even += 1;
        }
        else if ((arr[i] % 2) != 0) {
            odd += 1;
        }
    }
    print();
}

void create() {
    if (n <= 0) {
        cout << "Неверный формат" << endl;
    }
    else {
        int* arr = new int[n];
        cout << "Введите " << n << " целых чисел: " << endl;
        for (int i = 0; i < n; i++) {
            cin >> arr[i];
        }
        count(arr);
        delete [] arr;
    }
}

void menu() {
    cout << "------------" << endl;
    cout << "1. Старт" << endl;
    cout << "2. Выход" << endl;
    cout << "Выбор: ";
    cin >> choice;
    cout << "------------" << endl;
    
    switch (choice) {
        case 1:
            get();
            create();
            break;
        case 2:
            run = false;
            break;
        default:
            cout << "Неверный выбор" << endl;
            menu();
    }
}

int main() {
    while (run) {
        menu();
    }
    return 0;
}
