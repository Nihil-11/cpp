
#include <iostream>
using namespace std;

int a;
int b;

int sum(int a, int b) {
    int sum = a + b;
    
    return sum;
}

int sub(int a, int b) {
    int sub = a - b;
    
    return sub;
}

int mult(int a, int b) {
    int product = a * b;
    
    return product;
}

int divide(int a, int b) { 
    float result = a / b;
    
    return result;
}

int menu() {
    
    int choice;
    
    cout << "-------------------------------" << endl;
    cout << "1. Sum 1st and 2nd numbers" << endl;
    cout << "2. Subtract numbers (1st - 2nd)" << endl;
    cout << "3. Multiply 1st and 2nd numbers" << endl;
    cout << "4. Divide numbers (1st / 2nd)" << endl;
    cout << "-------------------------------" << endl;
    
    cout << "Choose the option: " ;
    cin >> choice;
    
    if (choice == 1) {
        cout << "Result: " << sum(a, b);
        return 0;
    }
    
    if (choice == 2) {
        cout << "Result: " << sub(a, b);
        return 0;
    }
    
    if (choice == 3) {
        cout << "Result: " << mult(a, b);
        return 0;
    }
    
    if (choice == 4) {
        cout << "Result: " << divide(a, b);
        return 0;
    }
    else {
        cout << "Wrong option" << endl;
        return 0;
    }
    return 0;
}

int main() {

    cout << "Enter the first number: ";
    cin >> a;
    cout << "Enter the second number: ";
    cin >> b;
    
    menu();
    
    return 0;
}
